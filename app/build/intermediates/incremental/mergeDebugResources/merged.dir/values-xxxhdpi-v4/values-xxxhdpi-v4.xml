<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9575cd</item>
        <item name="colorPrimaryDark">#5e35b1</item>
        <item name="colorAccent">#B388FF</item>
    </style>
    <style name="CustomButton">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="CustomImageButton">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">45dp</item>
      <item name="android:textSize">10sp</item>
    </style>
    <style name="CustomSpinner">
        <item name="android:textSize">25sp</item>
        <!--<item name="android:layout_margin">100dp</item>-->
    </style>
    <style name="CustomText">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="CustomTextProgramInfo">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
    <style name="CustomTextView">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="spinner_style">
       <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="swapbtnright">
        <item name="android:background">@drawable/roundedcornerbtn</item>
    </style>
</resources>