<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:weightSum="3">


    <ImageButton
        android:id="@+id/btn_close_village"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@color/button_purple"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <LinearLayout
        android:id="@+id/bottomControls_village"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_clear_changes_village"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:gravity="center"
            android:padding="5dp"
            android:text="Clear changes"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_ok_village"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:gravity="center"
            android:padding="5dp"
            android:text="Ok"
            android:textColor="#ffff"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/frameLayout_village"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomControls_village"
        android:layout_below="@id/view">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/flowLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                grid:alignmentMode="alignBounds" />
        </HorizontalScrollView>
    </ScrollView>

    <!--   <TextView
           android:id="@+id/txt_count_village"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/view"
           android:layout_weight="1"
           android:background="#f2dddc"
           android:gravity="center"
           android:paddingBottom="10dp"
           android:paddingTop="10dp"
           android:textColor="#000000"
           android:textSize="25sp"
           android:textStyle="bold" />-->
    <TextView
        android:id="@+id/txt_message_village"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="Select Villages"
        android:textColor="#111111"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="@dimen/_5sdp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txt_message_village"
        android:layout_marginTop="5dp"
        android:background="@color/button_purple" />
</RelativeLayout>


