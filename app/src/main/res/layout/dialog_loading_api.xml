<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_110sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/rounded_corner_whitebg">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_loading_plane"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_80sdp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading_plane.json"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lav_loading_plane"
        android:textAlignment="center"
        android:fontFamily="@font/glacialindifferencebold"
        android:textSize="@dimen/_10sdp"/>

</RelativeLayout>