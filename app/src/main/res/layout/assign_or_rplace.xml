<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/_400sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@color/White"
            app:cardElevation="@dimen/_1sdp">

            <RelativeLayout
                android:id="@+id/collect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/collect_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/collect_text"
                    app:srcCompat="@drawable/ic_collect" />

                <TextView
                    android:id="@+id/collect_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:text="@string/collecttab"
                    android:textAlignment="center"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@color/White"
            android:clickable="true"
            app:cardElevation="@dimen/_1sdp">

            <RelativeLayout
                android:id="@+id/assign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/replace_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/assign_text"
                    app:srcCompat="@drawable/ic_replace" />

                <TextView
                    android:id="@+id/assign_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:text="@string/assigntablet"
                    android:textAlignment="center"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>