<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/iv_upper_view"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:background="@color/green"/>

            <ImageView
                android:id="@+id/iv_circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/circlepink" />

            <View
                android:id="@+id/iv_lower_view"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/green"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nf_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:id="@+id/ly_orderstatus_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nf_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|top"
                    android:text="From Name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/nf_damageType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|top"
                    android:text="DamageType"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/itemSeperator"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D0E4DEDE"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:elevation="@dimen/_4sdp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>