<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/button_grey" />
                    <corners android:radius="@dimen/_25sdp" />
                    <padding android:bottom="@dimen/_2sdp" android:left="@dimen/_10sdp" android:right="10dp" android:top="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right" android:src="@drawable/arrowdown"/>
            </item>
        </layer-list>
    </item>
</selector>
