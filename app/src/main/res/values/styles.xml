<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9575cd</item>
        <item name="colorPrimaryDark">#5e35b1</item>
        <item name="colorAccent">#B388FF</item>
    </style>

    <style name="NoActionBr" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9575cd</item>
        <item name="colorPrimaryDark">#5e35b1</item>
        <item name="colorAccent">#B388FF</item>
    </style>

    <!--username password-->
    <style name="CustomText">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="CustomRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>


    <style name="CustomSpinner">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="spinner_style_new">
        <item name="android:textSize">30sp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="swapbtnright">
        <item name="android:background">@drawable/roundedcornerbtn</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="CustomTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CustomTextProgramInfo">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>


    <!--Multiselect Spinner-->
    <!-- Theme Styles -->
    <style name="Theme">
        <item name="spinnerStyle">@android:style/Widget.Spinner</item>
        <item name="dropDownSpinnerStyle">@style/Widget.Spinner.DropDown</item>
    </style>

    <style name="Theme.Holo">
        <item name="spinnerStyle">?android:attr/dropDownSpinnerStyle</item>
        <item name="dropDownSpinnerStyle">@style/Widget.Holo.Spinner.DropDown</item>
    </style>

    <style name="Theme.Holo.Light" parent="@android:style/Theme.Light">
        <item name="spinnerStyle">?android:attr/dropDownSpinnerStyle</item>
        <item name="dropDownSpinnerStyle">@style/Widget.Holo.Light.Spinner.DropDown</item>
    </style>

    <!-- Widget Styles -->

    <style name="Widget">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Spinner">
        <item name="android:background">@android:drawable/btn_dropdown</item>
        <item name="android:clickable">true</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:dropDownSelector">@drawable/list_selector_background</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <item name="android:dropDownVerticalOffset">-10dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <!--         <item name="android:popupPromptView">@android:layout/simple_dropdown_hint</item> -->
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Spinner.DropDown">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="Widget.Holo.Spinner" parent="Widget.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_background_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_dark</item>
        <!--         <item name="android:popupBackground">@android:drawable/menu_dropdown_panel_holo_dark</item> -->
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <!--         <item name="android:popupPromptView">@android:layout/simple_dropdown_hint</item> -->
        <item name="android:gravity">left|center_vertical</item>
        <!--         <item name="android:disableChildrenWhenDisabled">true</item> -->
    </style>

    <style name="Widget.Holo.Light.Spinner" parent="Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
        <!--         <item name="android:popupBackground">@android:drawable/menu_dropdown_panel_holo_light</item> -->
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <!--         <item name="android:popupPromptView">@android:layout/simple_dropdown_hint</item> -->
    </style>

    <style name="Widget.Holo.Spinner.DropDown"></style>

    <style name="Widget.Holo.Light.Spinner.DropDown"></style>

    <style name="devicelist">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerSize">50%</item>
    </style>

</resources>
